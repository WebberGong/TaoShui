<UserControl x:Class="TaoShui.Shared.SaveFooter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             x:Name="Root" x:FieldModifier="private">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="50" MinWidth="300" DataContext="{Binding ElementName=Root}">
        <Rectangle Height="1" Fill="LightBlue" VerticalAlignment="Top"></Rectangle>
        <TabPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Command="{Binding SaveCommand, Mode=OneWay}">保存</Button>
            <Canvas Width="10" />
            <Button Command="{Binding CancelCommand, Mode=OneWay}">取消</Button>
        </TabPanel>
    </Grid>
</UserControl>
