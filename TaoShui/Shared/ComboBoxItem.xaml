<UserControl x:Class="TaoShui.Shared.ComboBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             x:Name="Root" x:FieldModifier="private">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="40" MinWidth="300">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="70*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10"
                   DataContext="{Binding ElementName=Root}" Text="{Binding Text, Mode=OneWay}" />
        <ComboBox Grid.Column="1" DataContext="{Binding ElementName=Root}"
                  ItemsSource="{Binding Items, Mode=OneWay}" Margin="8"
                  SelectedItem="{Binding Selected, Mode=TwoWay}"
                  VerticalContentAlignment="Center"
                  SelectedValuePath="Id" DisplayMemberPath="Name" />
    </Grid>
</UserControl>