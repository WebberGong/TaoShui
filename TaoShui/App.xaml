<Application x:Class="TaoShui.App" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="clr-namespace:TaoShui.View"
             xmlns:vm="clr-namespace:TaoShui.ViewModel"
             StartupUri="MainWindow.xaml"
             mc:Ignorable="d">
    <Application.Resources>
        <ResourceDictionary>
            <locator:ViewModelLocator x:Key="Locator" d:IsDataSource="True" xmlns:locator="clr-namespace:TaoShui" />
            <DataTemplate DataType="{x:Type vm:SettingViewModel}">
                <v:SettingView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:WebSiteViewModel}">
                <v:WebSiteView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:MatchViewModel}">
                <v:MatchView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:RelevanceViewModel}">
                <v:RelevanceView />
            </DataTemplate>
            
            <Style TargetType="DataGrid">
                <Setter Property="HorizontalGridLinesBrush" Value="CornflowerBlue"></Setter>
                <Setter Property="VerticalGridLinesBrush" Value="CornflowerBlue"></Setter>
                <Setter Property="CanUserResizeColumns" Value="False"></Setter>
                <Setter Property="CanUserResizeRows" Value="False"></Setter>
                <Setter Property="CanUserDeleteRows" Value="False"></Setter>
                <Setter Property="CanUserAddRows" Value="False"></Setter>
                <Setter Property="CanUserSortColumns" Value="False"></Setter>
                <Setter Property="CanUserReorderColumns" Value="False"></Setter>
                <Setter Property="RowHeaderWidth" Value="0"></Setter>
                <Setter Property="AutoGenerateColumns" Value="False"></Setter>
                <Setter Property="AlternationCount" Value="2"></Setter>
            </Style>
            <Style TargetType="DataGridColumnHeader">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="White" Offset="0"/>
                            <GradientStop Color="LightBlue"  Offset="1"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Height" Value="30"></Setter>
                <Setter Property="BorderThickness" Value="1"></Setter>
                <Setter Property="BorderBrush" Value="CornflowerBlue"></Setter>
                <Setter Property="Margin" Value="-1, -1, -1, 0"></Setter>
                <Setter Property="Padding" Value="3"></Setter>
            </Style>
            <Style TargetType="DataGridRow">
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                <Style.Triggers>
                    <Trigger Property="AlternationIndex" Value="0" >
                        <Setter Property="Background" Value="Linen" />
                    </Trigger>
                    <Trigger Property="AlternationIndex" Value="1" >
                        <Setter Property="Background" Value="LightGoldenrodYellow" />
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="LightPink"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Foreground" Value="LightGreen"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>