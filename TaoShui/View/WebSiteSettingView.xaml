<UserControl x:Class="TaoShui.View.WebSiteSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Platform"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:TaoShui.ViewModel"
             mc:Ignorable="d"
             d:DesignWidth="900" d:DesignHeight="600"
             d:DataContext="{d:DesignInstance Type=vm:WebSiteSettingViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" ItemsSource="{Binding WebSiteSettings}" Margin="0 0 0 3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="编号" Binding="{Binding Id, Mode=TwoWay}" Width="0.5*" IsReadOnly="True"
                                    ElementStyle="{StaticResource ContentCenterStyle}" />
                <DataGridTextColumn Header="网站名" Binding="{Binding Name, Mode=TwoWay}"
                                    Width="*"
                                    ElementStyle="{StaticResource ContentCenterStyle}" />
                <DataGridTextColumn Header="网址" Binding="{Binding Url, Mode=TwoWay}"
                                    Width="2*"
                                    ElementStyle="{StaticResource ContentCenterStyle}" />
                <DataGridTextColumn Header="验证码长度"
                                    Binding="{Binding CaptchaLength, Mode=TwoWay}"
                                    Width="*" ElementStyle="{StaticResource ContentCenterStyle}" />
                <DataGridTextColumn Header="登录超时时间"
                                    Binding="{Binding LoginTimeOut, Mode=TwoWay}"
                                    Width="*" ElementStyle="{StaticResource ContentCenterStyle}" />
                <DataGridTextColumn Header="抓取数据时间间隔"
                                    Binding="{Binding GrabDataInterval, Mode=TwoWay}"
                                    Width="*"
                                    ElementStyle="{StaticResource ContentCenterStyle}" />
                <DataGridTemplateColumn
                    Width="60"
                    HeaderStyle="{StaticResource EditColumnHeaderStyle}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Style="{StaticResource EditColumnCellEditContentStyle}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction
                                                Command="{Binding DataContext.WebSiteSettingEditCommand, 
                                                RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}"
                                                CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <GridSplitter Grid.Row="0" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <DataGrid Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="0 0 3 0" />
            <GridSplitter Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Width="3" HorizontalAlignment="Right"
                          VerticalAlignment="Stretch" />
            <DataGrid Grid.Row="0" Grid.Column="1" Margin="0 0 0 3" />
            <GridSplitter Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                          Height="3" />
            <DataGrid Grid.Row="1" Grid.Column="1" />
            <DataGrid Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" ItemsSource="{Binding WebSites}" Margin="3 0 0 0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="编号" Binding="{Binding Id, Mode=TwoWay}" Width="0.5*" IsReadOnly="True"
                                        ElementStyle="{StaticResource ContentCenterStyle}" />
                    <DataGridTextColumn Header="网站名" Binding="{Binding Setting.Name, Mode=TwoWay}" Width="*"
                                        IsReadOnly="True"
                                        ElementStyle="{StaticResource ContentCenterStyle}" />
                    <DataGridTextColumn Header="用户名"
                                        Binding="{Binding LoginName, Mode=TwoWay}"
                                        Width="*" ElementStyle="{StaticResource ContentCenterStyle}" />
                    <DataGridTextColumn Header="密码"
                                        Binding="{Binding Password, Mode=TwoWay}"
                                        Width="*" ElementStyle="{StaticResource ContentCenterStyle}" />
                    <DataGridTemplateColumn
                        Width="60"
                        HeaderStyle="{StaticResource EditColumnHeaderStyle}">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Style="{StaticResource EditColumnHeaderContentStyle}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction
                                                Command="{Binding DataContext.WebSiteAddCommand, 
                                                RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Style="{StaticResource EditColumnCellEditContentStyle}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                                <i:InvokeCommandAction
                                                    Command="{Binding DataContext.WebSiteEditCommand, 
                                                    RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}"
                                                    CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBlock>
                                    <TextBlock Grid.Column="1" Style="{StaticResource EditColumnCellRemoveContentStyle}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                                <i:InvokeCommandAction
                                                    Command="{Binding DataContext.WebSiteRemoveCommand, 
                                                    RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}"
                                                    CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" />
                                            </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <GridSplitter Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Width="3"
                          HorizontalAlignment="Left" VerticalAlignment="Stretch" />
        </Grid>
    </Grid>
</UserControl>